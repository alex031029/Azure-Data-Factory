{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "yanshADFTutorialDataFactory"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/WebActivities')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "DummyGet",
						"type": "WebActivity",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"url": "https://jsonplaceholder.typicode.com/todos/1",
							"method": "GET"
						}
					},
					{
						"name": "DummyPost",
						"type": "WebActivity",
						"dependsOn": [
							{
								"activity": "DummyGet",
								"dependencyConditions": [
									"Succeeded"
								]
							}
						],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"url": "https://jsonplaceholder.typicode.com/posts",
							"method": "POST",
							"body": "{  \"title\": “foo”,  “body”: “bar“”,  \"userId\": 1}"
						}
					},
					{
						"name": "DummyPostWithHead",
						"type": "WebActivity",
						"dependsOn": [
							{
								"activity": "DummyGet",
								"dependencyConditions": [
									"Succeeded"
								]
							}
						],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"url": "https://jsonplaceholder.typicode.com/posts",
							"method": "POST",
							"headers": {
								"Content-type": "application/json"
							},
							"body": "{  \"title\": “foo”,  “body”: “bar“”,  \"userId\": 1}"
						}
					},
					{
						"name": "AppService",
						"type": "WebActivity",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"url": "https://dummygetapi.azurewebsites.net/",
							"method": "GET"
						}
					}
				],
				"annotations": []
			},
			"dependsOn": []
		}
	]
}